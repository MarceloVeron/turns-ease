{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "noEmit": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", ".next"]
  }